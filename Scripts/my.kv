            font_name : root.manager.dir + "Fonts\\Nunito Light"
            font_size : root.width//18
            size_hint: .1,.1
            pos_hint: {"x":0.2,"top":.6}
            color : hex("#563379")

        Label:
            text : "Compression Intensity "
            font_name : root.manager.dir + "Fonts\\Nunito Light"
            font_size : root.width//18
            size_hint: .1,.1
            pos_hint: {"x":0.46,"top":.53}
            color : hex("#563379")

        Label:
            text : str(int(slider.value)) + " %"
            font_name : root.manager.dir + "Fonts\\Nunito Light"
            font_size : root.width//18
            size_hint: .6,.1
            pos_hint: {"x":0.2,"top":.48}
            color : hex("#563379")

        Slider:
            id: slider
            min: 0
            max: 95
            step: 1
            orientation: 'horizontal'
            size_hint: 0.7,.06
            pos : (68,290)
            padding: 0
            border: (0,0,0,0)
            cursor_color : hex("#563379")

        Button:
            border : (0,0,0,0)
            size_hint: .55, 0.08
            pos_hint: {"x":0.22,"y":0.25}
            background_normal : root.manager.dir + "Images\\compresspg.png"
            background_down : root.manager.dir + "Images\\compresspg.png"
            opacity: 1 if self.state == 'normal' else .5
            on_release:
                root.get_saveas()

        Button:
            border : (0,0,0,0)
            size_hint: .15, .05
            pos_hint: {"x":0.10,"y":0.027}
            background_normal : root.manager.dir + "Images\\back.png"
            background_down : root.manager.dir + "Images\\back.png"
            opacity: 1 if self.state == 'normal' else .5
            on_release:
                app.root.transition = SlideTransition(direction = "right",duration = 0.15)
                file.text = ""
                app.root.current = "main"

        Button:
            border : (0,0,0,0)
            size_hint: .16, .075
            pos_hint: {"x":0.42,"y":0.02}
            background_normal : root.manager.dir + "Images\\home.png"
            background_down : root.manager.dir + "Images\\home.png"
            opacity: 1 if self.state == 'normal' else .5
            on_release:
                app.root.transition =RiseInTransition(duration = 0.1)
                file.text = ""
                app.root.current = "main"

        Button:
            border : (0,0,0,0)
            size_hint: .13, .065
            pos_hint: {"x":0.77,"y":0.02}
            background_normal : root.manager.dir + "Images\\quit1.png"
            background_down : root.manager.dir + "Images\\quit1.png"
            opacity: 1 if self.state == 'normal' else .5
            on_release:
                app.stop()

